<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grostigrepetitdragon.memegenerator.EnterTextFragment"
    >

    <EditText
        android:id="@+id/EnterTopText"
        android:text="@string/enter_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/EnterBottomText"
        android:layout_below="@+id/EnterTopText"
        android:text="@string/enter_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_button"
        android:text="@string/button_text"
        android:layout_below="@id/EnterBottomText"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
